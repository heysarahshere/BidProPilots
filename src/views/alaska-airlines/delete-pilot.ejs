<%- include("../shared/header") %>

<main class="container text-left">
    <h1>Alaska Airlines - Delete Pilot</h1>
    <div class="col-12 ml-0 p-2">
        <div class="card pt-2 pl-2 bg-white one" style="max-width: 500px;">
        <div class="row mb-0">
            <div class="col-sm-4 pt-2">
                <img src="/images/pilot.png"  class="card-img-top h-90 rounded-circle image-box" style="border: 0px solid white;" alt="...">
                 
                 <div class="overlay">
                      <i class="fa fa-circle <%=status == "INACTIVE" ? "inactive-badge" : "active-badge" %>"></i>
                  </div>
                
            </div>
            <div class="col-sm-8 text-left pl-3">
                <div class="card-body" >
                    <h5 class="card-title text-left" style="color: #203c58;"><%=firstName%> <%=lastName%>
                        <p class="float-right font-weight-light"><%=crewId%></p>
                    </h5>
                  <p class="p-0 font-weight-light" style="line-height: 18px;">

                <p class="mt-1 mb-0 float-right <%=status == "INACTIVE" ? "hidden" : "" %>" style="color: dodgerblue;">Active</p>
                <p class="mt-1 mb-0 float-right <%=status == "ACTIVE" ? "hidden" : "" %>" style="color: gray;">Inactive</p>
                
                </div>
                <%=seat%><br><span class="fa fa-map-marker"></span> <%=domicile%> <%=fleet%><br>Hired <%=hireDate%> <br><%=email%>
                 </p>
                </div>
            </div>
        </div>
    </div> 

    <div>
        <form action="/alaska-airlines/pilot/delete" method="post">
            <input type="hidden" name="_csrf" value="<%= csrftoken %>">
            <input type="hidden" name="pilotId" value="<%=pilotId%>">
            <p class="lead">Are you sure you want to delete this Pilot?</p>
            <input type="submit" class="btn btn-danger" value="YES">
            <a href="/alaska-airlines/pilots" class="btn btn-primary">NO</a>
        </form>
    </div>

   </div>
</main>

<%- include("../shared/footer") %>