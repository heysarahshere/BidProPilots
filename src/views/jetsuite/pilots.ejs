<%- include("../shared/header") %>

<main class="container week5">
    <h1 class="my-3" style="font-family: 'Times New Roman', Times, serif;">Week 5 Assignment</h1>  
        <form action="/jetsuite/pilots" method="POST" class="mt-3">
            <div class="form-group text-left p-0">
                <label for="name" style="font-family: 'Times New Roman', Times, serif;">Name: </label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    placeholder="Enter a name"
                    value="<%=name%>"
                 />

            </div>
                 <%if(errors.length > 0) {%>
                        <%for(var counter = 0; counter < errors.length; counter++){%>
                           <%if(errors[counter].msg != "You must enter a number."){%>
                                 <div class="alert alert-danger w-100">
                                    <%=errors[counter].msg%>
                                </div>
                              <%}%>
                          <%}%>
                    <%}%>
            
            <div class="form-group text-left p-0 numInput">
                
                <label for="numOfTimes" style="font-family: 'Times New Roman', Times, serif;">Num of times: </label>
                <input 
                    type="text" 
                    id="numOfTimes" 
                    name="numOfTimes" 
                    placeholder="Enter number"
                    value="<%=numOfTimes%>"
                 />

            </div>
            <%if(errors.length > 0) {%>
                     <%for(var counter = 0; counter < errors.length; counter++){%>
                       <%if(errors[counter].msg == "You must enter a number."){%>
                         <div class="alert alert-danger">
                                    <%=errors[counter].msg%>
                            </div>
                        <%}%>
                      <%}%>
                    <%}%>
        <%if(name.length > 0 && errors.length == 0) {%>
        <div class="text-left week5list">
            <%for(let counter = 0; counter < numOfTimes; counter++){%>
                <!-- if even, else -->
                <%if(((counter+1) % 2) == 0) {%>
                    <p style="font-family: 'Times New Roman', Times, serif;"><%=counter + 1%>. Hello <%=name%>!</p>
                    <%} else {%>
                <p style="font-family: 'Times New Roman', Times, serif;"><%=counter + 1%>. Hello <%=name%></p>
                <%}%>
             <%}%>
        </div>
        <%}%>
        <div class="pt-2 text-left week5buttons">
        <button class="btn btn-default btn-sm" type="submit">Display Hello!</button>
        <a class="btn btn-default btn-sm" href="/jetsuite/pilots">Reset</a>
        </div>
        
        </form>
</main>

<%- include("../shared/footer") %>